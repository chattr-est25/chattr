{
  "name": "chattr",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "clean": "rimraf services/*/server",
    "clean:all": "rimraf .turbo packages/*/node_modules services/*/node_modules services/*/server node_modules",
    "check": "biome check .",
    "check:unsafe": "biome check --write --unsafe .",
    "check:write": "biome check --write .",
    "prepare": "husky"
  },
  "workspaces": {
    "packages": [
      "services/*",
      "packages/*"
    ],
    "catalog": {
      "@bogeychan/elysia-logger": "^0.1.10",
      "@elysiajs/openapi": "^1.4.11",
      "elysia": "latest"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/bun": "^1.3.4",
    "@types/node": "^25.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "turbo": "^2.6.3"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "packageManager": "bun@1.3.3"
}
