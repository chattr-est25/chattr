{
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/bun": "^1.3.4",
    "@types/node": "^25.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "turbo": "^2.6.3"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "module": "index.ts",
  "name": "chattr",
  "packageManager": "bun@1.3.3",
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check": "biome check .",
    "check:unsafe": "biome check --write --unsafe .",
    "check:write": "biome check --write .",
    "clean": "rimraf services/*/server",
    "clean:all": "rimraf .turbo packages/*/node_modules services/*/node_modules services/*/server node_modules",
    "dev": "turbo run dev",
    "prepare": "husky",
    "typecheck": "turbo run typecheck"
  },
  "type": "module",
  "workspaces": {
    "catalog": {
      "@elysiajs/eden": "^1.4.5",
      "@elysiajs/openapi": "^1.4.11",
      "@t3-oss/env-core": "^0.13.8",
      "drizzle-kit": "^0.31.8",
      "drizzle-orm": "^0.45.1",
      "elysia": "latest",
      "elysia-healthcheck": "^1.0.0",
      "elysia-http-exception": "^0.1.5",
      "elysiajs-cdn-cache": "^0.0.13",
      "zod": "^4.1.13"
    },
    "packages": [
      "services/*",
      "packages/*"
    ]
  }
}
